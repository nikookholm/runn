<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="s112011.runn.CreateAgreement">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titel"
                    android:id="@+id/textViewTitle"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textColor="#000000" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextTitel"
                    android:layout_weight="1"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:hint="Skriv titel" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokation"
                    android:id="@+id/textViewLocation"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textColor="#000000" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextLoation"
                    android:layout_weight="1"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:hint="Angiv by" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dato"
                    android:id="@+id/textViewDate"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vælg Dato"
                    android:layout_weight="1"
                    android:id="@+id/buttonDate"
                    android:layout_column="4"
                    android:textAlignment="center"
                    android:layout_margin="3dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidspunkt"
                    android:id="@+id/textViewTime"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vælg Tid"
                    android:id="@+id/buttonTime"
                    android:layout_weight="1"
                    android:layout_column="4"
                    android:layout_margin="3dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gentag Ugentlig"
                    android:id="@+id/textViewRepeat"
                    android:layout_column="0"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#000000" />

                <ToggleButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hver uge"
                    android:id="@+id/toggleButtonRepeat"
                    android:layout_weight="1"
                    android:layout_column="4"
                    android:checked="false"
                    android:layout_margin="3dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niveau"
                    android:id="@+id/textViewNiveau"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:textColor="#000000"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerNiveau"
                    android:layout_weight="1"
                    android:layout_column="4"
                    android:spinnerMode="dropdown"
                    android:paddingLeft="10dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deltagere"
                    android:id="@+id/textViewParticipants"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:textColor="#000000" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextParticipants"
                    android:layout_weight="1"
                    android:layout_column="4"
                    android:hint="Antal ønskede personer" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:id="@+id/textViewDistance"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:textColor="#000000" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextDistance"
                    android:layout_weight="1"
                    android:layout_column="4"
                    android:hint="I kilometer" />

            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beskrivelse"
                android:id="@+id/textViewDescription"
                android:layout_column="0"
                android:layout_row="5"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editTextDescription"
                android:hint="Øvrige kommentarer"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_below="@+id/textViewDescription"
                android:layout_weight="1"
                android:layout_span="4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Opret Aftale"
                    android:id="@+id/buttonCreateAgreement"
                    android:background="#ff7522"
                    android:layout_gravity="bottom|left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="3dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Anuller"
                    android:id="@+id/buttonCancel"
                    android:background="#ff7522"
                    android:layout_below="@+id/scrollView3"
                    android:layout_gravity="right"
                    android:enabled="true"
                    android:layout_margin="3dp" />
            </RelativeLayout>

        </TableLayout>
    </ScrollView>

</RelativeLayout>
