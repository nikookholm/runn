<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="s112011.runn.ShowAgreement">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TitlePlaceholder"
                android:id="@+id/textView5"
                android:gravity="center"
                android:layout_alignRight="@+id/imageViewMap"
                android:layout_alignEnd="@+id/imageViewMap"
                android:layout_alignParentTop="true" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokation"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/textViewDeltager"
                    android:layout_alignRight="@+id/textViewDistance"
                    android:layout_alignEnd="@+id/textViewDistance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="København H"
                    android:id="@+id/textView8"
                    android:layout_alignTop="@+id/textViewLocation"
                    android:layout_alignRight="@+id/createBtn"
                    android:layout_alignEnd="@+id/createBtn" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/ivUser"
                    android:src="@drawable/ic_person_black_18dp"
                    android:layout_below="@+id/textViewOverskrift"
                    android:layout_alignRight="@+id/textViewTidspunkt"
                    android:layout_alignEnd="@+id/textViewTidspunkt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tom Hanks"
                    android:id="@+id/textView18"
                    android:textSize="11dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivMap"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_place_black_18dp"
                    android:layout_column="5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidspunkt"
                    android:id="@+id/textView9"
                    android:autoText="false"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30/11-2015 19:00"
                    android:id="@+id/textView10"
                    android:layout_alignTop="@+id/textViewTidspunkt"
                    android:layout_alignLeft="@+id/textViewLocationPlace"
                    android:layout_alignStart="@+id/textViewLocationPlace" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:id="@+id/textView11"
                    android:layout_below="@+id/textViewTidspunkt"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="69 km"
                    android:id="@+id/textView12"
                    android:layout_alignTop="@+id/textViewDistance"
                    android:layout_alignLeft="@+id/textViewDato"
                    android:layout_alignStart="@+id/textViewDato" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Løbeniveau"
                    android:id="@+id/textView13"
                    android:layout_below="@+id/textViewDistance"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avanceret"
                    android:id="@+id/textView14"
                    android:layout_alignTop="@+id/textViewLøbeniveau"
                    android:layout_alignLeft="@+id/textViewAntalDeltager"
                    android:layout_alignStart="@+id/textViewAntalDeltager" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deltagere"
                    android:id="@+id/textView15"
                    android:layout_below="@+id/textViewLøbeniveau"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2-6 Personer"
                    android:id="@+id/textView17"
                    android:layout_above="@+id/textViewLocation"
                    android:layout_alignRight="@+id/textViewLocationPlace"
                    android:layout_alignEnd="@+id/textViewLocationPlace" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Løbe beskrivelse"
                android:id="@+id/textView19"
                android:textSize="14dp"
                android:foregroundGravity="left"
                android:textStyle="bold"
                android:layout_above="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hej, jeg håber jeg finder nogle at løbe med her i til aftenen. Jeg er en avanceret løber og løber jævnligt ca. 3-5 gange om ugen."
                android:id="@+id/textView20"
                android:layout_above="@+id/createBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Deltag"
                    android:id="@+id/buttonAccept"
                    android:padding="5dp"
                    android:background="#FF5722"
                    android:enabled="true"
                    android:textStyle="normal"
                    android:layout_alignTop="@+id/buttonCancel"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Annuller"
                    android:id="@+id/buttonCancel"
                    android:background="#FF5722"
                    android:layout_margin="3dp" />
            </RelativeLayout>

        </TableLayout>
    </ScrollView>

</RelativeLayout>
