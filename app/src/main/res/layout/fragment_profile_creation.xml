<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="s112011.runn.ProfileCreation"
    android:focusableInTouchMode="false"
    android:focusable="false">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Min Profil"
        android:id="@+id/MinProfilLable"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="#060606"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewContacteImage"
        android:layout_below="@+id/MinProfilLable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_runner_logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profileName"
        android:hint="Name"
        android:layout_below="@+id/imageViewContacteImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailProfile"
        android:hint="din@email.com"
        android:layout_below="@+id/profileTlf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/profileTlf"
        android:layout_below="@+id/profileName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="TelefonNummer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/personaddresProfil"
        android:layout_below="@+id/emailProfile"
        android:layout_toStartOf="@+id/imageViewContacteImage"
        android:layout_alignRight="@+id/emailProfile"
        android:layout_alignEnd="@+id/emailProfile"
        android:hint="Address" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuller"
        android:id="@+id/annullerBtn"
        android:layout_marginTop="37dp"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_below="@+id/personaddresProfil"
        android:layout_alignRight="@+id/personaddresProfil"
        android:layout_alignEnd="@+id/personaddresProfil" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/okBtn"
        android:layout_alignTop="@+id/annullerBtn"
        android:layout_alignLeft="@+id/imageViewContacteImage"
        android:layout_alignStart="@+id/imageViewContacteImage"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_alignBottom="@+id/annullerBtn" />
</RelativeLayout>
